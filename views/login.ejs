<% layout('/layout/boilerplate') %> 
                                                   <!-- Login Form -->
    <div class="container d-flex justify-content-center align-items-center mb-5 mt-5">
      <div class="row">
          <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
              <div class="card shadow">
                  <img src="https://images.unsplash.com/photo-1444703686981-a3abbc4d4fe3?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80"
                      alt="" class="card-img-top" />
                  <div class="card-body">
                    
                    <% if(success.length > 0) { %>
                      <div class="alert alert-success">
                          <%= success %>
                      </div>
                  <% } %> 
                    <% if(error.length > 0) { %>
                      <div class="alert alert-danger">
                          <%= error %>
                      </div>
                  <% } %> 
                      <h5 class="card-title text-center"> Login  </h5>
                      <form action="/login" method="POST" class="validated-form" novalidate>
                          <div class="mb-3">
                              <label class="form-label" for="username">Username</label>
                              <input class="form-control" type="text" id="username" name="username" required autofocus>                           
                          </div>
                          <div class="mb-3">
                              <label class="form-label" for="password">Password</label>
                              <input class="form-control" type="password" id="password" name="password" required>                            
                          </div>
                          <button class="btn btn-success btn-block" type="submit">Login</button>
                      </form>

                  </div>
              </div>
          </div>
      </div>
    </div>
